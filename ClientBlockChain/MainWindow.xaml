<Window x:Class="ClientBlockChain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientBlockChain"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="res/14.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Foreground="#E0E0E0" Grid.Row="0" Grid.ColumnSpan="2" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">Seleziona metodo di login:</TextBlock>
        <Button Name="Button_Load" Background="#E0E0E0" Grid.Row="1" Grid.Column="0"  VerticalAlignment="Center" Height="50" Click="Button_Load_Click">Load</Button>
        <Button Name="Button_Create" Background="#E0E0E0" Grid.Row="1" Grid.Column="1"  VerticalAlignment="Center" Height="50" Click="Button_Create_Click">Create</Button>

        </Grid>
</Window>
